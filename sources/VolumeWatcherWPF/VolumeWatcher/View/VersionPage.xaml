<Page x:Class="VolumeWatcher.View.VersionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VolumeWatcher.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="VersionPage">

    <DockPanel ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Image x:Name="image"  Height="100" Margin="0,16"  Width="100" DockPanel.Dock="Top" VerticalAlignment="Top"/>
        <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top">
            <TextBlock x:Name="txtApp"     TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Center" />
            <TextBlock x:Name="txtVersion" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Center" />
            <TextBlock x:Name="txtDate"   TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Center" />
        </StackPanel>
    </DockPanel>
</Page>
